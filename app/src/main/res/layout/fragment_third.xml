<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdFragment"
    android:background="@color/blue">


    <EditText
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:id="@+id/etPlaceOfStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/et_name"
        android:hint="Place of study"
        android:paddingTop="30dp"
        android:textColorHint="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/etPlaceOfWork"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/etPlaceOfWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/etPlaceOfStudy"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/et_name"
        android:hint="Place of work"
        android:paddingTop="30dp"
        android:textColorHint="@color/black"
        android:textSize="26sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/thirdButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="THIRD FRAGMENT"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>